.admin-container {
  padding: 20rpx;
}

/* 顶部选择区域 */
.section-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.picker {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 300rpx;
}

/* 图片管理区域 */
.image-manager {
  margin-bottom: 40rpx;
}

.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-actions {
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.5);
  border-radius: 4rpx;
  padding: 4rpx;
}

/* 分类管理区域 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
}

.category-list {
  margin-bottom: 20rpx;
}

.category-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-item input {
  flex: 1;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  margin-right: 20rpx;
}

/* 按钮样式 */
.add-image-btn,
.add-category-btn,
.save-btn {
  margin: 20rpx 0;
}

.save-btn {
  width: 90%;
  margin: 40rpx auto;
}
